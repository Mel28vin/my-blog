---
import HeaderLink from "./HeaderLink.astro"
import ThemeToggle from "./themeToggleButton"
import { IoLogoGithub, IoLogoLinkedin } from "react-icons/io5/index.js"
import { MdMonitor } from "react-icons/md/index.js"
---

<header class="fixed w-full p-2 z-20 backdrop-blur-md">
  <div class="mx-auto max-w-3xl">
    <nav class="flex items-center gap-3 text-base">
      <a href="/" class="group">
        <h2
          class="flex items-center gap-2 font-semibold font-mplus tracking-tighter p-2 text-lg"
        >
          <MdMonitor /> Melvin Jebasamuel
        </h2>
      </a>
      <div class="items-center gap-6 hidden md:flex">
        <HeaderLink
          href="https://www.linkedin.com/in/melvin-jebasamuel/"
          target="_blank"
        >
          <IoLogoLinkedin /> About Me</HeaderLink
        >
        <HeaderLink href="https://github.com/Mel28vin/my-blog" target="_blank">
          <IoLogoGithub /> Source
        </HeaderLink>
      </div>
      <div class="flex-1"></div>
      <ThemeToggle client:load />
    </nav>
  </div>
</header>
